config clang-linux-base extends clang-base {

    # Specific attributes for the archive utility
    archive: {
        extension: ".a",
        flags: [
            "rcs"
        ]
    },

    shared: {
        extension: ".so",
        flags: [
            "-shared",
            "-o ${output}"
        ]
    },

    # Specific attributes for the shared stage
    executable: {
        extension: "",
        flags: [
            "-o ${output}"
        ]
    }
}