# Both environments use the default command executor (the system() function), but we need to differentiate them
# as the configurations and toolchains need to know which environment the build is running in.

env win-cmd {
    os: $sbs.win,
    arch: [ $sbs.x86, $sbs.x86_64 ],
}

env linux-bash {
    os: $sbs.linux,
    arch: [ $sbs.x86, $sbs.x86_64 ],
}
